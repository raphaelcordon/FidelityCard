@{
    ViewData["Title"] = "Campaign";
}

<h1>Campaigns</h1>

<form method="post" enctype="multipart/form-data" asp-controller="Campaign" asp-action="FileUpload" id="FormCampaign">
    <div class="form-group">
        <div class="col-md-10">
            
            <input id="imageFile" type="file" name="file" accept="image/png, image/jpeg" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input id="btn-submit" type="submit" value="Upload" />
        </div>
    </div>
</form>

@section scripts {
    <script src="~/js/renameImage.js" asp-append-version="true"></script>
}